<p>
	<%= f.text_area :content, :cols => "100%", :rows => 10, :tabindex  => 4 %>
</p>

<p>
	<%= f.submit "Submit Comment", :tabindex => 5 %>

<input type="hidden" name="comment_post_ID" value="561" />
</p>

<% end %>


