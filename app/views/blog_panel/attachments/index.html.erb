<% title "附件列表" %>
<h2>附件列表</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Avatar file name</th>
    <th>Avatar content type</th>
    <th>Avatar file size</th>
    <th>Avatar updated at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @attachments.each do |attachment| %>
  <tr>
    <td><%= attachment.name %></td>
    <td><%= attachment.description %></td>
    <td><%= attachment.avatar_file_name %></td>
    <td><%= attachment.avatar_content_type %></td>
    <td><%= attachment.avatar_file_size %></td>
    <td><%= attachment.avatar_updated_at %></td>
    <td><%= link_to 'Show', [:blog_panel, attachment] %></td>
    <td><%= link_to 'Edit', edit_blog_panel_attachment_path(attachment) %></td>
    <td><%= link_to 'Destroy', [:blog_panel, attachment], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

